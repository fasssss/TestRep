@model PollesViewModel
<h1>Polls Management Page</h1>

<ol>
	@foreach (var poll in Model.PollesList)
	{
		<li class="border border-dark m-2 p-2" style="border-radius: 0.5em">
			<form method="post" asp-controller="Home" asp-action="PollManagement" asp-route-pollId="@poll.Id">
				<div class="float-right">
					<button class="bg-danger btn-sm" name="action" value="delete">Delete</button>
					<button class="bg-warning btn-sm" name="action" value="change">Modify</button>
				</div>
			</form>
			<b>Description:</b> @poll.Description
		</li>
	}
</ol>
<form method="post" asp-controller="Home" asp-action="PollManagement">
	<div style="text-align: center">
		<textarea cols="120" rows="10" name="newPollDescription"></textarea>
	</div>
	<div style="text-align: center">
		<button class="bg-success btn-sm" name="action" value="add">Add new poll</button>
	</div>
</form>